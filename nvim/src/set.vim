" Hide unnecessary buffers
set hidden
" Better display for messages
set cmdheight=2
set updatetime=300
" Don't give '1 match out of 5' type of messages
set shortmess+=c

" Indentation
set smartindent
set expandtab
set shiftwidth=4
set tabstop=4
set softtabstop=4

" Search
set ignorecase
set smartcase

" Visual
set termguicolors
set cursorline
set noshowmode
set ls=2
set number
set relativenumber
set foldmethod=indent
set foldlevel=99
set signcolumn=yes
